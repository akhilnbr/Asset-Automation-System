@model Asset_Automation.ViewModel.BookinView






<div>
    

        <span><a href="@Url.Action("Index")"><i class="btn btn-danger">LogOut</i></a></span>
    
</div>




@using (Html.BeginForm("Book_Dupe", "Asset", FormMethod.Post))
{
    <table class="table  table-hover ">
        @Html.AntiForgeryToken()


        <tr>
            <td>
                <b>Department</b>
            </td>

            <td>@Html.DropDownList("department", new List<SelectListItem> { new SelectListItem { Text = "Xiphias Software Technologies", Value = "Xiphias Software Technologies" }, new SelectListItem { Text = "Xiphias Immigration", Value = "Xiphias Immigration" } }, "select department", new { @class = "form-control" })</td>
        </tr>

        <tr>
            <td>
                <b>Asset</b>
            </td>
            <td>
                @Html.DropDownListFor(model => model.asset, new SelectList(ViewBag.list, "asset", "asset"), "--select asset--", new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <b>Date</b>
            </td>
            <td>
                <input type="text" name="date" ,new class="form-control" id="datepicker" />
            </td>

        </tr>
        <tr>
            <td>
                <b>InTime</b>
            </td>
            <td>
                <input id="timepicker" name="intime" type="text" ,new class="form-control" />
            </td>
            <td>
                <b>OutTime</b>
            </td>
            <td>
                <input id="timepicker1" name="outtime" type="text" ,new class="form-control" />
            </td>

        </tr>
        <tr>
            <td><b>Members</b></td>

            <td>@Html.TextBoxFor(x => x.members, new { @class = "form-control" })</td>

        </tr>

        <tr>
            <td>
                <input type="submit" value="Book" ,new class="btn btn-danger" id="myBtn" name="Alert" />
            </td>
        </tr>
        <tr>
            <td></td>
        </tr>









    </table>




}


<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<link rel="stylesheet" type="text/css" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/jquery-clockpicker.min.css" rel="stylesheet" />
@section scripts
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.8.2.js"></script>


    <script src="~/Scripts/jquery-clockpicker.min.js"></script>
    <script type="text/javascript">

        $(function () {
            $("#timepicker").clockpicker({
                placement: 'top',
                align: 'left',
                donetext: 'Done'
            });
        });
        $(function () {
            $("#timepicker1").clockpicker({
                placement: 'top',
                align: 'left',
                donetext: 'Done'
            });
        });
    </script>


<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>



  $( function() {
    $( "#datepicker" ).datepicker();
  } );
</script>
    <script>
        $("a[data-form-method='post']").click(function (event) {
            event.preventDefault();
            var element = $(this);
            var action = element.attr("href");
            element.closest("form").each(function () {
                var form = $(this);
                form.attr("action", action);
                form.submit();
            });
        });

    </script>
<script>


    $(document).ready(function () {
        var elementId = '@ViewBag.suucesss';
        var ele = '@ViewBag.alert';

        if (elementId!=null) {

          $("#myModal").modal("show");
        }
        if (ele != null)
        {
            $("#secondary").modal("show");
        }
    });




</script>
}